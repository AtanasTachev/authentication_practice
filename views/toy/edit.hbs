<main>
    <h1>Edit Toy</h1>
    <div class="form">
        <form action="/cube/{{_id}}/edit" method="POST">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="{{name}}">
            <label for="description">Description</label>
            <textarea id="description" name="description">{{description}}</textarea>
            <label for="image">ImageUrl</label>
            <input type="text" id="image" name="imageUrl" value="{{imageUrl}}">
            <label for="age">Age</label>
            <select id="age" name="age" />
            <option value="0-6m">0-6 months</option>
            <option value="6-12m">6-12 months</option>
            <option value="0-3y">1-3 years</option>
            <option value="3-6y">3-6 years</option>
            <option value="6-9y">6-9 years</option>
            <option value="9-12y">9-12 years</option>
            </select>
            <input type="submit" value="Edit">
        </form>
    </div>
</main>

